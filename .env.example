# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=mountain_made

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your_very_secure_random_jwt_secret_key_change_this

# Admin Credentials
ADMIN_EMAIL=admin@mountainmade.com
ADMIN_PASSWORD=Admin@123

# Super Admin Credentials
SUPER_ADMIN_EMAIL=developer@mountainmade.com
SUPER_ADMIN_PASSWORD=SuperAdmin@123

# Optional: Auto-create test accounts on startup (useful for Render testing)
# IMPORTANT: Disable after testing by setting ENABLE_TEST_ACCOUNTS=false
ENABLE_TEST_ACCOUNTS=false
TEST_CUSTOMER_EMAIL=test.customer@mountainmade.local
TEST_CUSTOMER_PASSWORD=change_me
TEST_WHOLESALE_EMAIL=test.wholesale@mountainmade.local
TEST_WHOLESALE_PASSWORD=change_me

# Google Sign-In (required for real Google auth)
GOOGLE_CLIENT_ID=your_google_web_client_id.apps.googleusercontent.com

# Twilio Verify (required for real phone OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# Business Email Integration (Admin -> Message -> Send to Business Email)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM_EMAIL=no-reply@yourdomain.com
BUSINESS_SUPPORT_EMAIL=support@yourdomain.com
